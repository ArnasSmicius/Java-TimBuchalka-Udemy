<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button fx:id="increase" text="Increase" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#onButtonClicked"/>
    <Button fx:id="decrease" text="Decrease" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#onButtonClicked"/>
    <TextField fx:id="nameField" text="0" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>